<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Location">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/set_location"
        android:orientation="vertical"
        android:weightSum="100"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:transitionName="disabled"
            android:id="@+id/pickup_addr_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/delivery_addr_container"
            android:paddingVertical="10dp"
            android:background="@color/lugg_blue_light"
            android:layout_weight="100"
            >
            <ImageView
                android:id="@+id/pickup_addr_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/white"
                android:src="@drawable/face_book_icon" />
            <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/pickup_addr_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Line 1"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/pickup_addr_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Line 2"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/set_pickup_addr"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/white"
                android:layout_gravity="center"
                android:src="@drawable/arrow_fwd" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:transitionName="disabled"
            android:id="@+id/delivery_addr_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/set_location"
            android:paddingVertical="10dp"
            android:background="@color/lugg_blue_light"
            android:layout_weight="0"
            >
            <ImageView
                android:id="@+id/delivery_addr_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/white"
                android:src="@drawable/face_book_icon" />
            <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/delivery_addr_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Destination"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/delivery_addr_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/set_delivery_addr"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/white"
                android:layout_gravity="center"
                android:src="@drawable/arrow_fwd" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <android.widget.Button
        android:transitionName="pickup"
        android:id="@+id/set_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="20dp"
        android:background="@drawable/btn_bg"
        android:textSize="30dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/lugg_blue_dark"
        />


</androidx.constraintlayout.widget.ConstraintLayout>