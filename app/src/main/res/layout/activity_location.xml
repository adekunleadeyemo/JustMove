<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Location">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/location_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/location_container"
        android:paddingVertical="5dp"
        android:background="@color/lugg_blue_dark"
        android:orientation="horizontal"
        android:visibility="invisible"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/white"
            android:src="@drawable/outline_circle" />
        <TextView
            android:id="@+id/location_pin_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address Line 1"
            android:textSize="18dp"
            android:textColor="@color/white">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/location_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/set_location"
        android:paddingVertical="20dp"
        android:background="@color/lugg_blue_light"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/map_select_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/white"
            android:src="@drawable/face_book_icon" />
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:transitionName="pickup"
                android:id="@+id/addr_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Line 1"
                android:textSize="24dp"
                android:textColor="@color/white"
                />
            <TextView
                android:transitionName="pickup"
                android:id="@+id/addr_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Line 2"
                android:textSize="15dp"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <ImageView
            android:transitionName="pickup"
            android:id="@+id/set_addr"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white"
            android:layout_gravity="center"
            android:src="@drawable/arrow_fwd" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <android.widget.Button
        android:transitionName="pickup"
        android:id="@+id/set_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="20dp"
        android:background="@drawable/btn_bg"
        android:textSize="30dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/lugg_blue_dark"
        />


</androidx.constraintlayout.widget.ConstraintLayout>