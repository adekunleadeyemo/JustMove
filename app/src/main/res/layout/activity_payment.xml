<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment"
    android:background="@color/lugg_blue_dark"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lugg_blue_light"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/back_arrow"
            app:tint="@color/lugg_yellow"
            android:id="@+id/payment_details_back_arrow"
            />

        <TextView

            android:id="@+id/payment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/payment_details_back_arrow"
            app:layout_constraintEnd_toStartOf="@id/add_payment_card"
            app:layout_constraintBottom_toBottomOf="@id/payment_details_back_arrow"
            app:layout_constraintTop_toTopOf="@id/payment_details_back_arrow"
            android:text="Payment Info"
            android:textSize="20dp"
            android:textColor="@color/lugg_white"
            android:paddingHorizontal="20dp"
            />

        <TextView
            android:transitionName="next"
            android:id="@+id/add_payment_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/payment_details_back_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/payment_details_back_arrow"
            android:text="Add"
            android:textColor="@color/lugg_yellow" />

        <!--        add progress roller-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylerView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lugg_blue_dark"
        android:scrollbars="vertical"
        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/payment_nav"
        tools:listitem="@layout/payment_card_view" />

    <android.widget.Button
        android:id="@+id/intro_get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@color/lugg_yellow"
        android:paddingVertical="20dp"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/lugg_blue_dark"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>